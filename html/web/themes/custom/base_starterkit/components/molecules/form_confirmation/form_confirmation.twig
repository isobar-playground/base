{{ attach_library('webform/webform.confirmation') }}

{% if progress %}
  {{ progress }}
{% endif %}

<div{{ attributes.addClass('main-container') }}>

  {% if message %}
    <div class="webform-confirmation__message">
      <div class="p-4 mb-4 text-sm text-green-800 border border-green-300 bg-green-50">
        {{ message }}
      </div>
    </div>
  {% endif %}

  {% if back %}
    <div class="webform-confirmation__back">
      <a class="inline-block w-auto py-2.5 px-5 border border-transparent bg-black text-white text-sm font-semibold hover:border-black hover:bg-white hover:text-black transition duration-300" href="{{ back_url }}" rel="prev"{{ back_attributes }}>{{ back_label }}</a>
    </div>
  {% endif %}

</div>
